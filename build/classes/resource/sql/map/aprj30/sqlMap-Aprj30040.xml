    <select id="selectAPRJ30040_01" parameterType="Aprj20030Model" resultType="Aprj20030Model" >
        <![CDATA[
            SELECT
                     COUNT(*) totCnt
            FROM   (
        ]]>
        <include refid="InlineViewQuery"/>
        <include refid="WhereQuery" />
        <![CDATA[
                   ) TOT
        ]]>
    </select>


</mapper>